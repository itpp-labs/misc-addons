<odoo>

    <!-- views -->

    <record id="view_attendance_tree" model="ir.ui.view">
        <field name="name">res.partner.attendance.tree</field>
        <field name="model">res.partner.attendance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
            </tree>
        </field>
    </record>

    <record id="hr_attendance_view_form" model="ir.ui.view">
        <field name="name">res.partner.attendance.form</field>
        <field name="model">res.partner.attendance</field>
        <field name="arch" type="xml">
            <form string="Partner attendances">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="check_in"/>
                        <field name="check_out"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_attendance_view_filter" model="ir.ui.view">
        <field name="name">res_partner_attendance_view_filter</field>
        <field name="model">res.partner.attendance</field>
        <field name="arch" type="xml">
            <search string="Partner Attendance Search">
                <field name="partner_id"/>
                <filter name="today" string="Today" domain="[('check_in', '&gt;=', datetime.datetime.now().replace(hour=0, minute=0, second=0)),('check_in', '&lt;=', datetime.datetime.now().replace(hour=23, minute=59, second=59))]" />
                <filter name="month" string="Current Month" domain="[('check_in', '&gt;=', datetime.datetime.now().strftime('%Y-%m-01'))]" />
                <separator/>
                <filter name="no_check_out" string="No Check Out" domain="[('check_out', '=', False)]" />
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="partner" string="Partner" context="{'group_by':'partner_id'}"/>
                    <separator/>
                    <filter name="group_by_name" string="Month" context="{'group_by':'check_in'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="hr_attendance_view_pivot" model="ir.ui.view">
        <field name="name">res.partner.attendance.pivot</field>
        <field name="model">res.partner.attendance</field>
        <field name="arch" type="xml">
            <pivot string="Attendance">
                <field name="partner_id" type="row"/>
                <field name="check_in" type="col"/>
                <field name="worked_hours" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="hr_attendance_view_graph" model="ir.ui.view">
        <field name="name">res.partner.attendance.graph</field>
        <field name="model">res.partner.attendance</field>
        <field name="arch" type="xml">
            <graph string="Attendance">
                <field name="partner_id"/>
                <field name="check_in"/>
                <field name="worked_hours" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- actions -->

    <record id="hr_attendance_action" model="ir.actions.act_window">
        <field name="name">Attendances</field>
        <field name="res_model">res.partner.attendance</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_today":1}</field>
        <field name="search_view_id" ref="hr_attendance_view_filter" />
        <field name="help" type="html">
            <p>The attendance records of your partners will be displayed here.</p>
            <p>Please make sure you're using the correct filter if you expected to see any.</p>
        </field>
    </record>

    <record id="base_attendance_action_partner_attendances" model="ir.actions.act_window">
        <field name="name">Attendances</field>
        <field name="res_model">res.partner.attendance</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_partner_id': active_id, 'default_partner_id': active_id}</field>
        <field name="help" type="html">
            <p>No attendance records to display.</p>
        </field>
    </record>

    <record id="hr_attendance_action_graph" model="ir.actions.act_window">
        <field name="name">Attendance Analysis</field>
        <field name="res_model">res.partner.attendance</field>
        <field name="view_mode">pivot,graph</field>
        <field name="view_id"></field>  <!-- force empty -->
    </record>

    <record id="hr_attendance_action_graph_filtered" model="ir.actions.act_window">
        <field name="name">Attendance Analysis</field>
        <field name="res_model">res.partner.attendance</field>
        <field name="view_mode">pivot,graph</field>
        <field name="context">{
            'search_default_department_id': [active_id],
            'default_department_id': active_id}
        </field>
        <field name="view_id"></field>  <!-- force empty -->
    </record>

    <record model="ir.actions.server" id="hr_attendance_action_kiosk_mode">
        <field name="name">Get to the Kiosk Mode</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_res_partner_attendance"/>
        <field name="state">code</field>
        <field name="code">
hex_scanner_is_used = model.env["ir.config_parameter"].sudo().get_param("base_attendance.hex_scanner_is_used",default=False)
action = {
    'type': 'ir.actions.client',
    'tag': 'base_attendance_kiosk_mode',
    'target': 'fullscreen',
    'context': {
        'hex_scanner_is_used': hex_scanner_is_used
    },
}
        </field>
    </record>

    <record id="hr_attendance_action_greeting_message" model="ir.actions.client">
        <field name="name">Message</field>
        <field name="tag">base_attendance_greeting_message</field>
    </record>

    <!--Partner kanban view specifically for base_attendance (to check in/out) -->
    <record id="res_partner_kiosk_attendance_view" model="ir.ui.view">
        <field name="name">res.partner.kanban.attendance</field>
        <field name="model">res.partner</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_attendance_kanban" create="false">
                <field name="attendance_state"/>
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="Checked Image" t-att-src="kanban_image('res.partner', 'image_medium', record.id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div id="textbox">
                                    <div class="pull-right" t-if="record.attendance_state.raw_value == 'checked_in'">
                                        <span class="oe_hr_attendance_status fa fa-user oe_hr_attendance_status_green" aria-label="Green Status" title="Green Status"></span>
                                    </div>
                                    <div class="pull-right" t-if="record.attendance_state.raw_value == 'checked_out'">
                                        <span class="oe_hr_attendance_status fa fa-user oe_hr_attendance_status_red" aria-label="Red Status" title="Red Status"></span>
                                    </div>
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <ul>
                                    <li t-if="record.parent_id.raw_value and !record.function.raw_value"><field name="parent_id"/></li>
                                    <li t-if="!record.parent_id.raw_value and record.function.raw_value"><field name="function"/></li>
                                    <li t-if="record.parent_id.raw_value and record.function.raw_value"><field name="function"/> at <field name="parent_id"/></li>
                                    <li t-if="record.city.raw_value and !record.country_id.raw_value"><field name="city"/></li>
                                    <li t-if="!record.city.raw_value and record.country_id.raw_value"><field name="country_id"/></li>
                                    <li t-if="record.city.raw_value and record.country_id.raw_value"><field name="city"/>, <field name="country_id"/></li>
                                    <li t-if="record.email.raw_value" class="o_text_overflow"><field name="email"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="res_partner_kanban_view">
        <field name="name">res.partner.kanban</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="priority">99</field>
        <field name="groups_id" eval="[(4, ref('base_attendance.group_res_attendance'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//strong[hasclass('oe_partner_heading')]" position="replace">
                <div class="col-xs-11" style="padding:0px">
                    <strong><field name="name"/></strong>
                </div>
                <div class="col-xs-1" style="padding:0px">
                    <field name="attendance_state" invisible="1"/>
                    <div class="pull-right" t-if="record.attendance_state.raw_value == 'checked_in'">
                        <span class="fa fa-user oe_hr_attendance_status oe_hr_attendance_status_green" aria-label="Green Status" title="Green Status"></span>
                    </div>
                    <div class="pull-right" t-if="record.attendance_state.raw_value == 'checked_out'">
                        <span class="fa fa-user oe_hr_attendance_status oe_hr_attendance_status_red" aria-label="Red Status" title="Red Status"></span>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_partner_action_kanban_view" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="res_partner_kiosk_attendance_view"/>
        <field name="context">{}</field>
        <field name="groups_id" eval="[(4, ref('base_attendance.group_res_attendance'))]"/>
        <field name="help" type="html">
            <p>
                Create a few partners to be able to select a partner here and perform his check in / check out.
            </p>
            <p>
                To create partner go to the Partners menu.
            </p>
        </field>
    </record>

    <record id="view_partner_form_inherit_base_attendance" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority">99</field>
        <field name="groups_id" eval="[(4, ref('base_attendance.group_res_attendance'))]"/>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <div id="textbox">
                    <field name="name" placeholder="Partner's Name"/>
                </div>
            </field>
            <xpath expr="//button[hasclass('oe_stat_button')]" position="before">
                <field name="attendance_state" invisible="1"/>

                <button name="%(base_attendance_action_partner_attendances)d"
                    class="oe_stat_button"
                    type="action" attrs="{'invisible': [('attendance_state', '=', False)]}">
                    <div class="fa fa-fw fa-user o_button_icon oe_hr_attendance_status_green oe_hr_attendance_status" aria-label="Green Status" title="Green Status" attrs="{'invisible': [('attendance_state', '=', 'checked_out')]}"/>
                    <div class="fa fa-fw fa-user o_button_icon oe_hr_attendance_status_red oe_hr_attendance_status" aria-label="Red Status" title="Red Status" attrs="{'invisible': [('attendance_state', '=', 'checked_in')]}"/>
                    <div class="o_stat_info">
                        <span class="o_stat_text">Attendance</span>
                    </div>
                </button>
            </xpath>
            <page name="sales_purchases" position="inside">
                <group string="Attendance information" name="container_row_2">
                    <field name="pin"/>
                </group>
            </page>
        </field>
    </record>

    <!-- Menus -->

    <menuitem id="menu_base_attendance_root" name="Partner Attendances" sequence="90" groups="group_res_attendance" web_icon="base_attendance,static/description/icon.png"/>

    <menuitem id="menu_hr_attendance_manage_attendances" name="Manage Attendances" parent="menu_base_attendance_root" sequence="20" groups="base_attendance.group_res_attendance"/>

    <menuitem id="menu_hr_attendance_view_attendances" name="Attendances" parent="menu_hr_attendance_manage_attendances" sequence="10" groups="base_attendance.group_res_attendance" action="hr_attendance_action"/>

    <menuitem id="menu_hr_attendance_view_partners_kanban" name="Partners" parent="menu_hr_attendance_manage_attendances" sequence="15" groups="base_attendance.group_hr_attendance_manager" action="base.action_partner_form"/>

    <menuitem id="menu_hr_attendance_kiosk_mode" name="Kiosk Mode" parent="menu_hr_attendance_manage_attendances" sequence="20" groups="base_attendance.group_hr_attendance_manager" action="hr_attendance_action_kiosk_mode"/>

    <menuitem id="menu_hr_attendance_report" name="Reports" parent="menu_base_attendance_root" sequence="30" groups="base_attendance.group_hr_attendance_manager" action="hr_attendance_action_graph"/>

    <!--IR CRON-->

    <record model="ir.cron" id="base_attendance_autocheckout">
        <field name="name">Partner Shift Autocheckout</field>
        <field name="active" eval="False"/>
        <field name="interval_number">10</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_res_partner_attendance"/>
        <field name="state">code</field>
        <field name="code">model.autocheckout_close_shifts()</field>
    </record>

</odoo>
