<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.actions.server" id="action_journal_items">
            <field name="name">Journal Items by tax</field>
            <field name="model_id" ref="ohada_reports.model_ohada_financial_html_report_line"/>
            <field name="state">code</field>
            <field name="code">
                action = env['ohada.financial.html.report.line'].browse(env.context['active_id']).report_move_lines_action()
            </field>
        </record>

        <!-- PROFIT AND LOSS -->

        <record id="ohada_financial_report_profitandloss0" model="ohada.financial.html.report">
            <field name="name">Profit and Loss</field>
            <field name="shortname">Profit &amp; Lost</field>
            <field name="code">PL</field>
            <field name="type">main</field>
            <field name="debit_credit" eval="False"/>
            <field name="analytic" eval="True"/>
            <field name="cash_basis" eval="True"/>
            <field name="unfold_all_filter" eval="True"/>
            <field name="show_journal_filter" eval="True"/>
            <field name='parent_id' ref='menu_ohada_legal_statements_main'/>
        </record>
        <record id="ohada_financial_report_detailed_net_profit0" model="ohada.financial.html.report.line">
            <field name="name">Detailed Net Profit</field>
            <field name="code">DETAILED_NEP</field>
            <field name="formulas">debit = sum.debit; credit = sum.credit</field>
            <field name="domain" eval="[('account_id.user_type_id.include_initial_balance', '=', False)]" />
            <field name="special_date_changer">from_beginning</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="0" />
        </record>
        <record id="ohada_financial_report_net_profit0" model="ohada.financial.html.report.line">
            <field name="name">Net Profit</field>
            <field name="code">NEP</field>
            <field name="financial_report_id" ref="ohada_financial_report_profitandloss0"/>
            <field name="formulas">balance = INC.balance - LEX.balance</field>
            <field name="sequence" eval="3"/>
            <field name="level" eval="0" />
        </record>

        <record id="ohada_financial_report_totalincome0" model="ohada.financial.html.report.line">
            <field name="name">Income</field>
            <field name="code">INC</field>
            <field name="formulas">balance = OPINC.balance + OIN.balance - COS.balance</field>
            <field name="parent_id" eval="False"/>
            <field name="financial_report_id" ref="ohada_financial_report_profitandloss0"/>
            <field name="sequence" eval="1"/>
            <field name="level" eval="0" />
        </record>

        <record id="ohada_financial_report_gross_profit0" model="ohada.financial.html.report.line">
            <field name="name">Gross Profit</field>
            <field name="code">GRP</field>
            <field name="formulas">balance = OPINC.balance - COS.balance</field>
            <field name="parent_id" ref='ohada_financial_report_totalincome0'/>
            <field name="sequence" eval="1"/>
            <field name="level" eval="2" />
        </record>

        <record id="ohada_financial_report_income0" model="ohada.financial.html.report.line">
            <field name="name">Operating Income</field>
            <field name="code">OPINC</field>
            <field name="formulas">balance = -sum.balance</field>
            <field name="parent_id" ref='ohada_financial_report_gross_profit0'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_revenue'))]" />
            <field name="groupby">account_id</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="3" />
        </record>

        <record id="ohada_financial_report_cost_sales0" model="ohada.financial.html.report.line">
            <field name="name">Cost of Revenue</field>
            <field name="code">COS</field>
            <field name="formulas">balance = sum.balance</field>
            <field name="parent_id" ref='ohada_financial_report_gross_profit0'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_direct_costs'))]" />
            <field name="groupby">account_id</field>
            <field name="sequence" eval="3"/>
            <field name="green_on_positive" eval="False"/>
            <field name="level" eval="3" />
        </record>

        <record id="ohada_financial_report_other_income0" model="ohada.financial.html.report.line">
            <field name="name">Other Income</field>
            <field name="code">OIN</field>
            <field name="formulas">balance = -sum.balance</field>
            <field name="parent_id" ref='ohada_financial_report_totalincome0'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_other_income'))]" />
            <field name="groupby">account_id</field>
            <field name="sequence" eval="2"/>
            <field name="level" eval="2" />
        </record>

        <record id="ohada_financial_report_less_expenses0" model="ohada.financial.html.report.line">
            <field name="name">Expenses</field>
            <field name="code">LEX</field>
            <field name="formulas">balance = EXP.balance + DEP.balance</field>
            <field name="parent_id" eval="False"/>
            <field name="sequence" eval="2"/>
            <field name="financial_report_id" ref="ohada_financial_report_profitandloss0"/>
            <field name="green_on_positive" eval="False"/>
            <field name="level" eval="0" />
        </record>
        <record id="ohada_financial_report_expense0" model="ohada.financial.html.report.line">
            <field name="name">Expenses</field>
            <field name="code">EXP</field>
            <field name="formulas">balance = sum.balance</field>
            <field name="parent_id" ref='ohada_financial_report_less_expenses0'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_expenses'))]" />
            <field name="groupby">account_id</field>
            <field name="sequence" eval="1"/>
            <field name="green_on_positive" eval="False"/>
            <field name="level" eval="2" />
        </record>
        <record id="ohada_financial_report_depreciation0" model="ohada.financial.html.report.line">
            <field name="name">Depreciation</field>
            <field name="code">DEP</field>
            <field name="formulas">balance = sum.balance</field>
            <field name="parent_id" ref='ohada_financial_report_less_expenses0'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_depreciation'))]" />
            <field name="groupby">account_id</field>
            <field name="sequence" eval="2"/>
            <field name="green_on_positive" eval="False"/>
            <field name="level" eval="2" />
        </record>


        <!-- BALANCE SHEET -->

        <record id="ohada_financial_report_balancesheet0" model="ohada.financial.html.report">
            <field name="name">Balance Sheet</field>
            <field name="shortname">Balance sheet</field>
            <field name="code">BS</field>
            <field name="type"></field>
            <field name="cash_basis" eval="True"/>
            <field name="debit_credit" eval="False"/>
            <field name="date_range" eval="False"/>
            <field name="analytic" eval="True"/>
            <field name="unfold_all_filter" eval="True"/>
            <field name='parent_id' ref='menu_ohada_legal_statements_main'/>
        </record>
        <record id="ohada_financial_report_total_assets0" model="ohada.financial.html.report.line">
            <field name="name">ASSETS</field>
            <field name="code">TA</field>
            <field name="financial_report_id" ref="ohada_financial_report_balancesheet0"/>
            <field name="formulas">balance = CA.balance + FA.balance + PNCA.balance</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="0" />
        </record>
        <record id="ohada_financial_report_current_assets_view0" model="ohada.financial.html.report.line">
            <field name="name">Current Assets</field>
            <field name="code">CA</field>
            <field name="parent_id" ref='ohada_financial_report_total_assets0'/>
            <field name="formulas">balance = BA.balance + REC.balance + CAS.balance + PRE.balance</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="1" />
        </record>
        <record id="ohada_financial_report_bank_view0" model="ohada.financial.html.report.line">
            <field name="name">Bank and Cash Accounts</field>
            <field name="code">BA</field>
            <field name="parent_id" ref='ohada_financial_report_current_assets_view0'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_liquidity'))]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="2" />
        </record>
        <record id="ohada_financial_report_receivable0" model="ohada.financial.html.report.line">
            <field name="name">Receivables</field>
            <field name="code">REC</field>
            <field name="parent_id" ref='ohada_financial_report_current_assets_view0'/>
            <field name="domain" eval="[('account_id.user_type_id.type', '=', 'receivable')]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance</field>
            <field name="sequence" eval="2"/>
            <field name="level" eval="2" />
        </record>
        <record id="ohada_financial_report_current_assets0" model="ohada.financial.html.report.line">
            <field name="name">Current Assets</field>
            <field name="code">CAS</field>
            <field name="parent_id" ref='ohada_financial_report_current_assets_view0'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_current_assets'))]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance</field>
            <field name="sequence" eval="3"/>
            <field name="level" eval="2" />
        </record>
        <record id="ohada_financial_report_prepayements0" model="ohada.financial.html.report.line">
            <field name="name">Prepayments</field>
            <field name="code">PRE</field>
            <field name="parent_id" ref='ohada_financial_report_current_assets_view0'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_prepayments'))]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance</field>
            <field name="sequence" eval="4"/>
            <field name="level" eval="2" />
        </record>
        <record id="ohada_financial_report_fixed_assets_view0" model="ohada.financial.html.report.line">
            <field name="name">Plus Fixed Assets</field>
            <field name="code">FA</field>
            <field name="parent_id" ref='ohada_financial_report_total_assets0'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_fixed_assets'))]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance</field>
            <field name="sequence" eval="3"/>
            <field name="level" eval="1" />
        </record>
        <record id="ohada_financial_report_non_current_assets_view0" model="ohada.financial.html.report.line">
            <field name="name">Plus Non-current Assets</field>
            <field name="code">PNCA</field>
            <field name="parent_id" ref='ohada_financial_report_total_assets0'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_non_current_assets'))]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance</field>
            <field name="sequence" eval="4"/>
            <field name="level" eval="1" />
        </record>
        <record id="ohada_financial_report_liabilities_view0" model="ohada.financial.html.report.line">
            <field name="name">LIABILITIES</field>
            <field name="code">L</field>
            <field name="financial_report_id" ref="ohada_financial_report_balancesheet0"/>
            <field name="groupby">account_id</field>
            <field name="formulas">balance = CL.balance + NL.balance</field>
            <field name="sequence" eval="2"/>
            <field name="green_on_positive" eval="False"/>
            <field name="level" eval="0" />
        </record>
        <record id="ohada_financial_report_current_liabilities0" model="ohada.financial.html.report.line">
            <field name="name">Current Liabilities</field>
            <field name="code">CL</field>
            <field name="parent_id" ref='ohada_financial_report_liabilities_view0'/>
            <field name="formulas">balance = CL1.balance + CL2.balance</field>
            <field name="sequence" eval="1"/>
            <field name="green_on_positive" eval="False"/>
            <field name="level" eval="1" />
        </record>
        <record id="ohada_financial_report_current_liabilities1" model="ohada.financial.html.report.line">
            <field name="name">Current Liabilities</field>
            <field name="code">CL1</field>
            <field name="parent_id" ref='ohada_financial_report_current_liabilities0'/>
            <field name="domain" eval="[('account_id.user_type_id', 'in', [ref('account.data_account_type_current_liabilities'), ref('account.data_account_type_credit_card')])]"/>
            <field name="groupby">account_id</field>
            <field name="formulas">balance = -sum.balance</field>
            <field name="sequence" eval="1"/>
            <field name="green_on_positive" eval="False"/>
            <field name="level" eval="2" />
        </record>
        <record id="ohada_financial_report_current_liabilities_payable" model="ohada.financial.html.report.line">
            <field name="name">Payables</field>
            <field name="code">CL2</field>
            <field name="parent_id" ref='ohada_financial_report_current_liabilities0'/>
            <field name="domain" eval="[('account_id.user_type_id.type', '=', 'payable')]"/>
            <field name="groupby">account_id</field>
            <field name="formulas">balance = -sum.balance</field>
            <field name="sequence" eval="2"/>
            <field name="green_on_positive" eval="False"/>
            <field name="level" eval="2" />
        </record>
        <record id="ohada_financial_report_non_current_liabilities0" model="ohada.financial.html.report.line">
            <field name="name">Plus Non-current Liabilities</field>
            <field name="code">NL</field>
            <field name="parent_id" ref='ohada_financial_report_liabilities_view0'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_non_current_liabilities'))]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = -sum.balance</field>
            <field name="sequence" eval="2"/>
            <field name="green_on_positive" eval="False"/>
            <field name="level" eval="1" />
        </record>
        <record id="ohada_financial_report_net_assets0" model="ohada.financial.html.report.line">
            <field name="name">Net Assets</field>
            <field name="code">NA</field>
            <field name="formulas">balance = TA.balance - L.balance</field>
            <field name="sequence" eval="3"/>
            <field name="level" eval="0" />
        </record>
        <record id="ohada_financial_report_equity0" model="ohada.financial.html.report.line">
            <field name="name">EQUITY</field>
            <field name="code">EQ</field>
            <field name="formulas">balance = UNAFFECTED_EARNINGS.balance + RETAINED_EARNINGS.balance</field>
            <field name="sequence" eval="4"/>
            <field name="financial_report_id" ref="ohada_financial_report_balancesheet0"/>
            <field name="level" eval="0" />
        </record>
        <record id="ohada_financial_unaffected_earnings0" model="ohada.financial.html.report.line">
            <field name="name">Unallocated Earnings</field>
            <field name="code">UNAFFECTED_EARNINGS</field>
            <field name="domain">[]</field>
            <field name="formulas">balance = CURR_YEAR_EARNINGS.balance + PREV_YEAR_EARNINGS.balance</field>
            <field name="sequence" eval="1"/>
            <field name="special_date_changer">normal</field>
            <field name="parent_id" ref='ohada_financial_report_equity0'/>
            <field name="level" eval="1" />
        </record>
        <record id="ohada_financial_current_year_earnings0" model="ohada.financial.html.report.line">
            <field name="name">Current Year Unallocated Earnings</field>
            <field name="code">CURR_YEAR_EARNINGS</field>
            <field name="formulas">balance = CURR_YEAR_EARNINGS_PNL.balance + CURR_YEAR_EARNINGS_ALLOC.balance</field>
            <field name="sequence" eval="1"/>
            <field name="parent_id" ref='ohada_financial_unaffected_earnings0'/>
            <field name="level" eval="2" />
        </record>
        <record id="ohada_financial_current_year_earnings_line_1" model="ohada.financial.html.report.line">
            <field name="name">Current Year Earnings</field>
            <field name="code">CURR_YEAR_EARNINGS_PNL</field>
            <field name="domain" eval="[('account_id.user_type_id', 'in', [
                ref('account.data_account_type_revenue'),
                ref('account.data_account_type_other_income'),
                ref('account.data_account_type_direct_costs'),
                ref('account.data_account_type_expenses'),
                ref('account.data_account_type_depreciation')
            ])]" />
            <field name="formulas">balance = -sum.balance</field>
            <field name="sequence" eval="1"/>
            <field name="parent_id" ref='ohada_financial_current_year_earnings0'/>
            <field name="special_date_changer">from_fiscalyear</field>
            <field name="level" eval="3" />
        </record>
        <record id="ohada_financial_current_year_earnings_line_2" model="ohada.financial.html.report.line">
            <field name="name">Current Year Allocated Earnings</field>
            <field name="code">CURR_YEAR_EARNINGS_ALLOC</field>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_unaffected_earnings'))]" />
            <field name="formulas">balance = -sum.balance</field>
            <field name="sequence" eval="2"/>
            <field name="parent_id" ref='ohada_financial_current_year_earnings0'/>
            <field name="special_date_changer">from_fiscalyear</field>
            <field name="level" eval="3" />
        </record>
        <record id="ohada_financial_previous_year_earnings0" model="ohada.financial.html.report.line">
            <field name="name">Previous Years Unallocated Earnings</field>
            <field name="code">PREV_YEAR_EARNINGS</field>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_unaffected_earnings'))]" />
            <field name="formulas">balance = NEP.balance - sum.balance - CURR_YEAR_EARNINGS.balance</field>
            <field name="sequence" eval="2"/>
            <field name="special_date_changer">from_beginning</field>
            <field name="parent_id" ref='ohada_financial_unaffected_earnings0'/>
            <field name="level" eval="2" />
        </record>
        <record id="ohada_financial_retained_earnings0" model="ohada.financial.html.report.line">
            <field name="name">Retained Earnings</field>
            <field name="code">RETAINED_EARNINGS</field>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_equity'))]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = -sum.balance</field>
            <field name="sequence" eval="2"/>
            <field name="parent_id" ref='ohada_financial_report_equity0'/>
            <field name="level" eval="1" />
        </record>
        <record id="ohada_financial_report_liabilities_and_equity_view0" model="ohada.financial.html.report.line">
            <field name="name">LIABILITIES + EQUITY</field>
            <field name="code">LE</field>
            <field name="financial_report_id" ref="ohada_financial_report_balancesheet0"/>
            <field name="groupby">account_id</field>
            <field name="formulas">balance = L.balance + EQ.balance</field>
            <field name="sequence" eval="4"/>
            <field name="green_on_positive" eval="False"/>
            <field name="level" eval="0" />
        </record>


        <!-- CASH SUMMARY -->

        <record id="ohada_financial_report_cashsummary0" model="ohada.financial.html.report">
            <field name="name">Cash Flow Statement</field>
            <field name="shortname">Cashflow</field>
            <field name="code">CF</field>
            <field name="type">main</field>
            <field name="unfold_all_filter" eval="True"/>
            <field name="show_journal_filter" eval="True"/>
            <field name='parent_id' ref='menu_ohada_legal_statements_main'/>
        </record>
        <record id="ohada_financial_report_cashsummary_net_increase0" model="ohada.financial.html.report.line">
            <field name="name">Net increase in cash and cash equivalents</field>
            <field name="sequence" eval="1"/>
            <field name="formulas">balance = OP.balance + FI.balance + IN.balance + UNC.balance + REGUL.balance</field>
            <field name="level" eval="0" />
            <field name="financial_report_id" ref="ohada_financial_report_cashsummary0"/>
            <field name="special_date_changer">strict_range</field>
        </record>

        <record id="ohada_financial_report_cashsummary_operating0" model="ohada.financial.html.report.line">
            <field name="name">Cash flows from operating activities</field>
            <field name="code">OP</field>
            <field name="sequence" eval="1"/>
            <field name="parent_id" ref='ohada_financial_report_cashsummary_net_increase0'/>
            <field name="formulas">balance = PRECUS.balance + CACUS.balance + PRESUP.balance + LCP.balance</field>
            <field name="level" eval="2" />
            <field name="special_date_changer">strict_range</field>
        </record>
        <record id="ohada_financial_report_cashsummary_prepayments_received0" model="ohada.financial.html.report.line">
            <field name="name">Advance Payments received from customers</field>
            <field name="code">PRECUS</field>
            <field name="sequence" eval="1"/>
            <field name="parent_id" ref='ohada_financial_report_cashsummary_operating0'/>
            <field name="domain" eval="[('account_id.internal_type', '=', 'receivable')]" />
            <field name="formulas">balance = -sum.amount_residual</field>
            <field name="level" eval="3" />
            <field name="groupby">partner_id</field>
            <field name="special_date_changer">strict_range</field>
        </record>
        <record id="ohada_financial_report_cashsummary_cash_received0" model="ohada.financial.html.report.line">
            <field name="name">Cash received from operating activities</field>
            <field name="code">CACUS</field>
            <field name="sequence" eval="2"/>
            <field name="parent_id" ref='ohada_financial_report_cashsummary_operating0'/>
            <field name="domain" eval="[('credit', '>', 0), ('account_id.tag_ids', '=', ref('account.account_tag_operating'))]" />
            <field name="formulas">balance = -sum.balance</field>
            <field name="level" eval="3" />
            <field name="groupby">account_id</field>
            <field name="special_date_changer">strict_range</field>
        </record>
        <record id="ohada_financial_report_cashsummary_cash_paid0" model="ohada.financial.html.report.line">
            <field name="name">Advance payments made to suppliers</field>
            <field name="code">PRESUP</field>
            <field name="sequence" eval="3"/>
            <field name="parent_id" ref='ohada_financial_report_cashsummary_operating0'/>
            <field name="domain" eval="[('account_id.internal_type', '=', 'payable')]" />
            <field name="formulas">balance = -sum.amount_residual</field>
            <field name="level" eval="3" />
            <field name="groupby">partner_id</field>
            <field name="special_date_changer">strict_range</field>
        </record>
        <record id="ohada_financial_report_cashsummary_cash_spent0" model="ohada.financial.html.report.line">
            <field name="name">Cash paid for operating activities</field>
            <field name="code">LCP</field>
            <field name="sequence" eval="4"/>
            <field name="parent_id" ref='ohada_financial_report_cashsummary_operating0'/>
            <field name="domain" eval="[('debit', '>', 0), ('account_id.tag_ids', '=', ref('account.account_tag_operating'))]" />
            <field name="formulas">balance = -sum.balance</field>
            <field name="level" eval="3" />
