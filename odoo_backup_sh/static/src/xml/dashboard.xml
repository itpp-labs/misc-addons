<templates id="template" xml:space="preserve">

    <t t-name="odoo_backup_sh.BackupDashboardMain">
        <div class="o_backup_dashboard">
            <div class="o_backup_dashboard_header">

                <a t-if="widget.dashboard_can_backup()" href="#" class="o_box_item o_dashboard_action_add_database" title="Add new database in the dashboard.">
                    <div class="o_inner_box o_primary">

                        <i class="fa fa-database fa-3x"/><br/>
                        Add Database
                    </div>
                </a>
                    <!--
                        See update_info method to undestand meaning of the button.
                        It's normally not needed for the user. 
                        It's call automatically after every cron backup

                    <div class="o_inner_box o_dashboard_action_update_info" title="Update backups information.">
                        <i class="fa fa-refresh fa-3x"/><br/>
                        Update Info
                    </div>
                    -->

                  <t t-if="widget.dashboard_basic()">
                    <a href="#" class="o_box_item o_dashboard_action o_dashboard_configure_s3_credentials" title="Set S3 credentials" name="odoo_backup_sh.action_backup_settings">
                    <div class="o_inner_box o_primary">
                        <i class="fab fa-aws fa-3x"/><br/>
                        Configure S3
                    </div></a>
                    <!-- IAP is disabled
                    <a href="#" class="o_box_item o_dashboard_get_s3_credentials" title="Purchase S3 access via odoo.com">
                    <div class="o_inner_box o_primary">
                        <i class="fab fa-aws fa-3x"/><br/>
                        Get S3 storage
                    </div></a>
                    -->
                    <a target="_blank" t-att-href="widget.modules.odoo_backup_sh_dropbox.url" class="o_box_item o_dashboard_use_dropbox" title="Install module to save backups to your Dropbox">
                    <div class="o_inner_box o_primary">
                        <i class="fa fa-dropbox fa-3x"/><br/>
                        Use Dropbox
                    </div></a>
                    <a target="_blank" t-att-href="widget.modules.odoo_backup_sh_google_disk.url" class="o_box_item o_dashboard_use_google_disk" title="Install module to save backups to your Google Drive">
                    <div class="o_inner_box o_primary">
                        <i class="fab fa-google-drive fa-3x"/><br/>
                        Use Google Drive
                    </div></a>
                  </t>
                  <t t-if="widget.dashboard_configure_dropbox()">
                    <a href="#" class="o_box_item o_dashboard_action o_dashboard_configure_dropbox" title="" name="odoo_backup_sh.action_backup_settings">
                    <div class="o_inner_box o_primary">
                        <i class="fa fa-dropbox fa-3x"/><br/>
                        Configure Dropbox
                    </div></a>
                  </t>
                  <t t-if="widget.dashboard_configure_google_disk()">
                    <a href="#" class="o_box_item o_dashboard_action o_dashboard_configure_google_disk" title="" name="odoo_backup_sh.action_backup_settings">
                    <div class="o_inner_box o_primary">
                        <i class="fab fa-google-drive fa-3x"/><br/>
                        Configure Google Drive
                    </div></a>
                  </t>
                  <!-- iap is disabled
                  <t t-if="widget.dashboard_offer_iap()">
                    <a href="#" class="o_box_item o_dashboard_get_s3_credentials" title="Purchase S3 access via odoo.com">
                    <div class="o_inner_box o_primary">
                        <i class="fab fa-aws fa-3x"/><br/>
                        Extra backups to S3
                    </div></a>
                    </t>
                    -->
                  <t t-if="widget.dashboard_iap()">
                    <a target="_blank" t-att-href="widget.up_balance_url" class="o_box_item o_dashboard_action" title="Up to the balance.">
                    <div class="o_inner_box o_primary">
                        <i class="fa fa-money fa-3x"/><br/>
                        Go to Balance
                    </div></a>
                  </t>
                  <t t-if="widget.dashboard_offer_extra_module()">
                    <a target="_blank" t-att-href="widget.modules.odoo_backup_sh_dropbox.url" class="o_box_item o_dashboard_use_dropbox" title="Install module to save backups to your Dropbox">
                    <div class="o_inner_box o_primary">
                        <i class="fa fa-dropbox fa-3x"/><br/>
                        Extra backups to Dropbox
                    </div></a>
                    <a target="_blank" t-att-href="widget.modules.odoo_backup_sh_google_disk.url" class="o_box_item o_dashboard_use_google_disk" title="Install module to save backups to your Google Drive">
                    <div class="o_inner_box o_primary">
                        <i class="fab fa-google-drive fa-3x"/><br/>
                        Extra backups to Google Drive
                    </div></a>

                  </t>

            </div>
            <div class="o_backup_dashboard_note_section">
              <t t-if="widget.show_nocontent_msg">
                <t  t-if="widget.dashboard_can_backup()">
                <div class="o_backup_dashboard_nocontent">
                    <p class="o_backup_dashboard_nocontent_create">
                        Click to add a new Database
                    </p>
                    <p>
                        The application helps you easily manage your databases:<br/>
                        Auto/manual backup, auto rotation, remote storage for your backups, detailed statistics, etc.
                    </p>
                </div>
                </t>
                <t  t-if="!widget.dashboard_can_backup()">

                  <t t-if="widget.dashboard_basic()">
                    <div class="o_backup_dashboard_nocontent">
                      <p class="o_backup_dashboard_nocontent_create">
                        Choose storage for backups
                      </p>
                      <p>
                      </p>
                    </div>
                  </t>
                  <t t-if="widget.dashboard_configure_google_disk() or widget.dashboard_configure_dropbox()">
                    <div class="o_backup_dashboard_nocontent">
                      <p class="o_backup_dashboard_nocontent_create">
                        Finish configuration
                      </p>
                      <p>
                      </p>
                    </div>
                  </t>
                </t>
              </t>
                <t t-foreach="widget.notifications" t-as="notification">
                    <div class="o_backup_dashboard_notification" t-att-data-notification_id="notification.id">
                        <t t-raw="notification.message"/>
                        <button type="button" class="close" data-dismiss="alert">&amp;times;</button>
                    </div>
                </t>
            </div>
            <div class="graph_container" t-if="!widget.show_nocontent_msg">
                <h2 class="graph_title">total remote storage usage</h2>
                <div class="kanban_group_buttons o_hidden">
                    <button type="button" data-service="total" class="btn btn-primary btn-sm">Total</button>
                    <button type="button" data-service="odoo_backup_sh" class="btn btn-secondary btn-sm">S3</button>
                </div>
                <div id="graph_remote_storage_usage"/>
            </div>
            <div class="o_backup_dashboard_configs o_kanban_view o_kanban_dashboard o_kanban_ungrouped"/>
        </div>
    </t>

    <t t-name="odoo_backup_sh.config_cards">
        <t t-foreach="configs" t-as="config">
            <div class="o_kanban_record" t-att-data-db_name="config.database" t-att-data-service="config.storage_service">
                <div class="backup_card_title">
                    <span title="Database Name"><t t-esc="config.database"/></span>
                    <t t-if="!config.active">
                        <span class="o_kanban_card_warning">
                            <i class="fa fa-warning" title="Warning"/>
                            <p>The current configuration with scheduled auto backups had not activated.</p>
                            <p><strong>Setting have not been set!</strong></p>
                        </span>
                    </t>
                    <span class="backup_config_edit o_dashboard_action_backup_config" t-att-data-res_id="config.id">
                        <i class="fa fa-pencil" title="Edit Backup Config"/>
                    </span>
                </div>
                <div class="backup_storage_service_title o_hidden"><span id="backup_storage_type" title="Backup Storage Type">
                    <t t-if="config.storage_service == 'odoo_backup_sh'">
                        S3
                    </t>
                </span></div>
                <div class="backup_card_content">
                    <button type="object" class="btn btn-primary btn-sm pull-left o_dashboard_action_make_backup">
                        <span>Make backup now</span>
                    </button>
                    <a href="#" class="pull-right o_dashboard_action_view_backups">
                        <t t-esc="config.backups_number"/> Remotely stored backups
                    </a>
                </div>
                <div class="backup_config_card_graph"/>
            </div>
        </t>
    </t>

    <t t-name="odoo_backup_sh.error_msg">
        <strong>Error: </strong><t t-value="error_msg"/>
    </t>

</templates>
