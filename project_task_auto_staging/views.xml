<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Cron job for automatically move -->
        <record forcecreate="True" id="ir_cron_autostaging"
                model="ir.cron">
            <field name="name">Autostaging</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
            <field eval="'project.task'" name="model" />
            <field eval="'move_tasks'" name="function" />
            <field eval="'()'" name="args" />
        </record>

         <record id="view_project_form_allow_automove" model="ir.ui.view">
          <field name="name">project.form.allow.automove</field>
          <field name="model">project.project</field>
          <field name="inherit_id" ref="project.edit_project"/>
          <field name="arch" type="xml">
				<data>
				  <xpath expr="//div[@name='options_active']" position="inside">
					 <field name="allow_automove" attrs="{'readonly': [('use_tasks', '=', False)]}"/>
                     <label for="allow_automove"/>
				  </xpath>
				</data>
			 </field>
		  </record>


        <record id="view_task_form_automove" model="ir.ui.view">
          <field name="name">project.task.form.automove</field>
          <field name="model">project.task</field>
          <field name="inherit_id" ref="project.view_task_form2"/>
          <field name="arch" type="xml">
				<data>
				  <xpath expr="//field[@name='reviewer_id']" position="after">
                     <group col="4" colspan="2" string="Autostaging" attrs="{'invisible':[('allow','=',False)]}">
			    		 <field name="to_stage" widget="days"
                                string="Move to stage"/> 
        	    	     <field name="when_date"/> 
        	    	     <field name="allow" invisible="1"/> 
        	    	     <field name="write_date"/> 
                     </group>
				  </xpath>
				</data>
			 </field>
		  </record> 
	 </data>
</openerp>
