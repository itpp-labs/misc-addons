<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-extend="HiddenInputFile">
        <t t-jquery="input[name='ufile']:eq(1)" t-operation="replace">
            <input
                t-if="widget.widget=='image'"
                type="file"
                class="o_form_input_file"
                name="ufile"
            />
        </t>
    </t>

    <t t-extend="FieldBinaryImage-img">
        <t t-jquery="img" t-operation="replace">
            <!--VIDEO-->
            <t t-if="widget.media_type=='video/url'">
                <img
                    class="img img-responsive media-image m-dotted media-video"
                    t-attf-onclick="$('#ImageModal{{ widget.media_id }}').arcticmodal()"
                    t-att-src='url'
                    border="1"
                />
                <div class="g-hidden">
                    <div class="box-modal" t-attf-id="ImageModal{{ widget.media_id }}">
                        <div class="box-modal_close arcticmodal-close">X</div>
                        <t t-if="widget.media_video_service=='youtube'">
                            <iframe
                                width="560"
                                height="315"
                                t-attf-src="https://www.youtube.com/embed/{{widget.media_video_ID}}"
                                frameborder="0"
                            />
                        </t>
                        <t t-if="widget.media_video_service=='vimeo'">
                            <iframe
                                width="640"
                                height="360"
                                t-attf-src="https://player.vimeo.com/video/{{widget.media_video_ID}}"
                                frameborder="0"
                            />
                        </t>
                    </div>
                </div>
            </t>
            <!--PDF-->
            <t t-if="widget.media_type=='application/pdf'">
                <a t-att-href='widget.pdf_url' target="_blank">
                    <img
                        class="img img-responsive media-image m-dotted"
                        t-att-src='url'
                        t-att-border="1"
                    />
                </a>
            </t>
            <!--DOC-->
            <t t-if="widget.media_type=='application/msword'">
                <a t-att-href='widget.msword_url' target="_blank">
                    <img
                        class="img img-responsive media-image m-dotted"
                        t-att-src='url'
                        t-att-border="1"
                    />
                </a>
            </t>
            <!--DOCX-->
            <t
                t-if="widget.media_type=='application/vnd.openxmlformats-officedocument.wordprocessingml.document'"
            >
                <a t-att-href='widget.docx_url' target="_blank">
                    <img
                        class="img img-responsive media-image m-dotted"
                        t-att-src='url'
                        t-att-border="1"
                    />
                </a>
            </t>
            <!--XLS-->
            <t t-if="widget.media_type=='application/vnd.ms-excel'">
                <a t-att-href='widget.xls_url' target="_blank">
                    <img
                        class="img img-responsive media-image m-dotted"
                        t-att-src='url'
                        t-att-border="1"
                    />
                </a>
            </t>
            <!--XLSX-->
            <t
                t-if="widget.media_type=='application/vnd.openxmlformats-officedocument.spreadsheetml.sheet'"
            >
                <a t-att-href='widget.xlsx_url' target="_blank">
                    <img
                        class="img img-responsive media-image m-dotted"
                        t-att-src='url'
                        t-att-border="1"
                    />
                </a>
            </t>
            <!--IMAGE-->
            <t
                t-if="!widget.media_type or (widget.media_type and widget.media_type=='image')"
            >
                <img
                    class="img img-responsive media-image m-dotted"
                    t-attf-onclick="$('#ImageModal{{ widget.media_id }}').arcticmodal()"
                    t-att-src='url'
                    t-att-border="widget.readonly ? 0 : 1"
                    t-att-name="widget.name"
                    t-att-width="widget.node.attrs.img_width || widget.node.attrs.width"
                    t-att-height="widget.node.attrs.img_height || widget.node.attrs.height"
                />
                <div class="g-hidden">
                    <div class="box-modal" t-attf-id="ImageModal{{ widget.media_id }}">
                        <div class="box-modal_close arcticmodal-close">X</div>
                        <img
                            class="o_image img img-responsive"
                            t-att-src='url'
                            t-att-name="widget.name"
                        />
                    </div>
                </div>
            </t>
        </t>
    </t>

</templates>
