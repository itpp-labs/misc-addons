<odoo>
    <data>

        <template id="barcode_assets_backend" name="barcodes_stock_inventory_assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/barcodes_stock_inventory/static/src/js/barcode_inventory.js"></script>
            </xpath>
        </template>

        <record model="ir.ui.view" id="view_barcode_inventory_form">
            <field name="name">stock.inventory.form</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">
                <form position="inside">
                    <field name="_barcode_scanned" widget="barcode_handler"/>
                </form>
            </field>
        </record>

    </data>
</odoo>
